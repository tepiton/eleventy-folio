---
layout: layouts/base.njk
---
<article class="chapter">
	<header class="chapter-header">
		<p class="chapter-kicker">Chapter {{ chapterNumber or order }}</p>
		<h1>{{ title }}</h1>
		{% if dek %}<p class="chapter-dek">{{ dek }}</p>{% endif %}
	</header>

	{{ content | safe }}

	{% set previousChapter = collections.chapters | getPreviousCollectionItem %}
	{% set nextChapter = collections.chapters | getNextCollectionItem %}
	{% if previousChapter or nextChapter %}
	<nav class="links-nextprev" aria-label="Chapter navigation">
		{% if previousChapter %}
		<a class="links-nextprev-prev" href="{{ previousChapter.url }}">← {{ previousChapter.data.title }}</a>
		{% endif %}
		{% if nextChapter %}
		<a class="links-nextprev-next" href="{{ nextChapter.url }}">{{ nextChapter.data.title }} →</a>
		{% endif %}
	</nav>
	{% endif %}
</article>
